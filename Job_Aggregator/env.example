# AI Job Aggregator & Recommender API - Environment Configuration

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
ENVIRONMENT=development

# API Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-for-authentication

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default)
DATABASE_URL=sqlite:///./data/jobspy.db

# PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/jobspy

# MySQL (alternative)
# DATABASE_URL=mysql://username:password@localhost:3306/jobspy

# =============================================================================
# REDIS CONFIGURATION (for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Cache settings
CACHE_TTL=3600  # Cache time-to-live in seconds
CACHE_ENABLED=True

# =============================================================================
# SCRAPING CONFIGURATION
# =============================================================================
# Rate limiting
MAX_RESULTS_PER_REQUEST=50
REQUEST_TIMEOUT=30
RATE_LIMIT_DELAY=1
MAX_CONCURRENT_REQUESTS=5

# Retry settings
MAX_RETRIES=3
RETRY_DELAY=2
BACKOFF_FACTOR=2

# User agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# =============================================================================
# MACHINE LEARNING CONFIGURATION
# =============================================================================
# Model paths
MODEL_PATH=./artifacts/recommendation_model.h5
TOKENIZER_PATH=./artifacts/tokenizer.pkl
SCALER_PATH=./artifacts/scaler.pkl

# ML settings
ML_MODEL_ENABLED=True
RECOMMENDATION_THRESHOLD=0.7
MAX_RECOMMENDATIONS=10

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Prometheus metrics
PROMETHEUS_ENABLED=True
METRICS_PORT=9090

# Analytics
ANALYTICS_ENABLED=True
TRACK_USER_ACTIONS=True

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=True

# Webhook notifications
WEBHOOK_URL=
WEBHOOK_SECRET=

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# CORS settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]
CORS_ALLOW_CREDENTIALS=True

# Rate limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60  # seconds

# JWT settings (if implementing authentication)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# JOB BOARD API KEYS (if available)
# =============================================================================
# LinkedIn API (if you have access)
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
LINKEDIN_REDIRECT_URI=

# Indeed API (if you have access)
INDEED_API_KEY=

# Glassdoor API (if you have access)
GLASSDOOR_API_KEY=

# =============================================================================
# PROXY CONFIGURATION
# =============================================================================
# Proxy settings for scraping
PROXY_ENABLED=False
PROXY_LIST=
PROXY_ROTATION=True

# =============================================================================
# FILE STORAGE
# =============================================================================
# Local storage
STORAGE_PATH=./storage
MAX_FILE_SIZE=50MB

# AWS S3 (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=us-east-1

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Development tools
RELOAD=True
WORKERS=1

# Testing
TEST_DATABASE_URL=sqlite:///./test.db
TEST_MODE=False

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# Production optimizations
WORKERS=4
KEEP_ALIVE=2
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100

# SSL/TLS
SSL_CERT_PATH=
SSL_KEY_PATH=

# =============================================================================
# FEATURE FLAGS
# =============================================================================
# Enable/disable features
FEATURE_AI_RECOMMENDATIONS=True
FEATURE_SALARY_PREDICTIONS=True
FEATURE_COMPANY_ANALYSIS=True
FEATURE_EXPORT_JOBS=True
FEATURE_REAL_TIME_SCRAPING=True

# =============================================================================
# NOTIFICATION SETTINGS
# =============================================================================
# Job alerts
ALERT_EMAIL_ENABLED=False
ALERT_FREQUENCY=daily
ALERT_MAX_JOBS=50

# Webhook notifications
WEBHOOK_JOB_ALERTS=False
WEBHOOK_NEW_JOBS=False

# =============================================================================
# ANALYTICS & TRACKING
# =============================================================================
# Google Analytics (if using)
GA_TRACKING_ID=

# Custom analytics
ANALYTICS_ENDPOINT=
ANALYTICS_API_KEY=
